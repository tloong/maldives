<h2>部門列表</h2>

<div><%= will_paginate @departments, renderer: BootstrapPagination::Rails %></div>
<div><%= page_entries_info @departments, renderer: BootstrapPagination::Rails %></div>

<div class="pull-right" style="padding-bottom: 20px;">
  <%= link_to("新增部門", new_department_path, :class => "btn btn-primary btn-sm") %>
</div>
<table class="table table-striped">
	<thead>
		<tr>
			<th>ID</th>
			<th>部門代號</th>
			<th>部門名稱</th>
			<th>部門別名</th>
			<th>摘要</th>
			<th>會計科目</th>
		</tr>
	</thead>
	<tbody>		
		<% @departments.each do |department| %>
		<tr>
			<td><%= department.id %></td>
			<td><%= department.dep_id %></td>
			<td><%= department.name %></td>
			<td><%= department.alias %></td>
			<td><%= department.docket_head %></td>
			<td><%= department.account_type %></td>
			<td>
				<%= link_to("[修改]" , edit_department_path(department)) %>
				<%= link_to("[刪除]" , department_path(department) , method: :delete ) %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>

